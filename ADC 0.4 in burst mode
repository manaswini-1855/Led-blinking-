#include <LPC17xx.h>
#include <stdio.h>

void UART1_Init(void);
void UART1_SendString(char *str);
void ADC_Init(void);

int main(void) {
    UART1_Init();  
    ADC_Init();    

    while (1) {        
        while (!(LPC_ADC->ADGDR & (1 << 31)));
        uint32_t result = (LPC_ADC->ADGDR >> 4) & 0xFFF; 
        char buffer[20];
        sprintf(buffer, "ADC Value: %u\n", result); 
        UART1_SendString(buffer);                  
        for (unsigned int i = 0; i <= 60000; i++); 
    }
}

void UART1_Init(void) {
    LPC_SC->PCONP |= 0x10;             
    LPC_PINCON->PINSEL4 |= 0x0000000A;  
    LPC_UART1->LCR = 0x83;              
    LPC_UART1->DLM = 0x00;              
    LPC_UART1->DLL = 0xA2;              
    LPC_UART1->LCR = 0x03;              
}

void UART1_SendString(char *str) {
    while (*str) {
        while (!(LPC_UART1->LSR & 0x20));  
        LPC_UART1->THR = *str++;           
    }
}

void ADC_Init(void) {
    LPC_SC->PCONP |= (1 << 12);            
    LPC_PINCON->PINSEL3 = (1 << 28)|(1<<29);      // Configure P0.28 and P0.29 as AD0.4
    LPC_SC->PCLKSEL0 &= ~(0x3 << 24);      
    LPC_SC->PCLKSEL0 |= (0x0 << 24);      
    LPC_ADC->ADCR = (1 << 4)               // Select AD0.4
                  | (0x0 << 8)             // ADC clock division factor
                  | (1 << 21)              // Enable ADC
                  | (1 << 16);             // Enable Burst mode
}
